{
  "name": "eslint-plugin-lingui-typescript",
  "version": "1.12.0",
  "description": "ESLint plugin for Lingui with TypeScript type-aware rules",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/eslint-plugin-lingui-typescript.git"
  },
  "homepage": "https://github.com/sebastian-software/eslint-plugin-lingui-typescript#readme",
  "bugs": {
    "url": "https://github.com/sebastian-software/eslint-plugin-lingui-typescript/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "release": "release-it",
    "release:auto": "release-it --ci"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "lingui",
    "i18n",
    "internationalization",
    "localization",
    "typescript"
  ],
  "author": "Sebastian Software GmbH <s.werner@sebastian-software.de> (https://www.sebastian-software.de)",
  "license": "MIT",
  "engines": {
    "node": ">=24"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@typescript-eslint/rule-tester": "^8.48.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.48.1"
  }
}
